<% decks.each do |deck| %>
  <div class="cards-deck">
    <div class="card-deck-body">
      <div class="row">
      <h5 class="card-deck-title"> <%= deck.name %></h5>
      <p class= "small text-secondary"> <%= deck.created_at.strftime("%d %B %Y") %></p>
        <div class="container">
        <p> ğŸš€ Created by <%= deck.user.email.split("@").first %>
        <% if current_user.photo_url.present?%>
          <%= image_tag(deck.user.photo_url,
      style:"display: inline-block;
      height: 20px; width: 20px;
      border-radius: 50%;
       object-fit: cover;")%>
      <% end  %>
      </p>
          <p> ğŸ¤¼ <%= deck.voters.count %> person(s) voted </p>
          <% if deck.status == "Closed" %>
          <p class= "most-voted-item"> ğŸ†<strong><%= deck.most_voted_deck_item.item.name %> </strong> </p>
          <% end %>
          <div class="d-flex justify-content-between">
            <div data-controller="clip-board" data-clip-board-feedback-text-value="Copied!">
              <input style="opacity: 1; height: auto; width:auto; position: absolute; z-index: -1;" class="d-some" data-clip-board-target="input" type="text" value=" <%= deck_url(deck) %>" readonly>
              <div class="bg"></div>
              <button class="create-btn" data-action="click->clip-board#copy"><i class="fa-regular fa-share-from-square"></i> Share the link</button>
            </div>

          <% if deck.status != "Hidden" %>

            <%= link_to "", hide_deck_path(deck), data: {turbo_method: :put, turbo_confirm: 'Are you sure?'}, class: "hide-icon fas fa-times" %>

          <% end %>

          <% if deck.user_id == current_user.id && deck.status == "Pending" %>
          <%= link_to "Close the vote", close_vote_deck_path(deck), method: :put, class: "close-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>
