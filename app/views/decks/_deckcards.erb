<% decks.each do |deck| %>
  <div class="cards-deck">
    <div class="card-deck-body">
      <div class="row">
      <h5 class="card-deck-title"> <%= deck.name %></h5>
        <div class="container">
          <p> 👑
            <% if current_user.username == deck.user.username %>
              You
            <% else %>
              <%= deck.user.username %> </p>
            <% end %>
          </p>
          <p> 📅 <%= deck.created_at.strftime("%d %B %Y")  %></p>
          <p> 🗳️ <%= deck.deck_items.joins(:votes).count %></p>
          <p>🏆
            <% if deck.most_voted_deck_item %>
              <%= deck.most_voted_deck_item.name %> (<%= deck.most_voted_deck_item.votes_count %> votes)
            <% else %>
              No winner yet
            <% end %>
          </p>
        </div>
          <% if deck.user_id == current_user.id && deck.status == "Pending" %>
          <div class= "container">
            <button class="btn btn-outline-warning btn-sm"> Close the vote </button>
          </div>
          <% end %>
      </div>
    </div>
  </div>
<% end %>
