<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Créez votre liste de restaurants</h3>
        <%= simple_form_for @deck do |f| %>
          <%= f.input :name, placeholder: "entrez le nom de votre liste" %>
          <div>
            <%= label_tag "Dans quel quartier?" %>
            <%= text_field_tag :address %>
          </div>
          <div>
            <%= label_tag "Pour quel budget?" %>
            <%= select_tag :price_range, options_for_select([['€', '€'], ['€€', '€€'], ['€€€', '€€€'], ['€€€€', '€€€€']]), include_blank: true %>
          </div>
          <%= submit_tag "Valider", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
